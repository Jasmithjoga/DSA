class Solution {
public:
    int maxProfit(vector<int>& prices) {
        int size=prices.size();
        int min_price=prices[0];
        int max_profit=0;
        for(int i=0; i<size; i++){
            min_price=min(min_price, prices[i]);
            int local_profit=prices[i]-min_price;
            max_profit=max(max_profit, local_profit);
        }
        return max_profit;
    }
};
