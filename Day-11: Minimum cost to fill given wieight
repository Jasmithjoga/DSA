class Solution {
public:
    int minimumCost(int cost[], int N, int W) {
        
        const int INF = 1e9;
        vector<int> dp(W + 1, INF);
        
        dp[0] = 0;
        
        for(int w = 1; w <= W; w++) {
            for(int i = 0; i < N; i++) {
                if(cost[i] != -1 && (i + 1) <= w) {
                    dp[w] = min(dp[w], cost[i] + dp[w - (i + 1)]);
                }
            }
        }
        
        return dp[W] == INF ? -1 : dp[W];
    }
};
